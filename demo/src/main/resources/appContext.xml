<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fruit" class="com.example.demo.Fruit" />
    <bean id="vegetable" class="com.example.demo.Vegetable" />
    <bean id="apple" class="com.example.demo.Fruit" >
	    <constructor-arg index="0" value="Apple">
	    </constructor-arg>
    </bean>
    <bean id="lettuce" class="com.example.demo.Vegetable">
        <property name="name" value="Lettuce"></property>
    </bean>
    <bean id="orange" class="com.example.demo.Fruit" >
        <property name="fruitName" value="Orange"></property>
    </bean>
    <bean id="fruitSalad"  class="com.example.demo.Fruit">
        <property name="fruitName" value="Fruit Salad"></property>
    	<property name="fruitNameList">
     	   <list>
	    	   <value>apple</value>
	    	   <value>orange</value>
	    	   <value>banana</value>
	    	   <value>pawpaw</value>
    	   </list>
    	</property>
    	<property name="fruitNameMap">
    	   <map>
    	   <entry key="apple" value="red" />
    	   <entry key="orange" value="orange"/>
    	   <entry key="banana" value="yellow"/>
    	   <entry key="pawpaw" value="orange/red"/>
    	   </map>
    	</property>
    </bean>
    

</beans>
